{% macro nav_item(route_name, label) %}
    <li class="item {{ app.request.attributes.get('_route') == route_name ? 'active' : '' }}">
        <a class="link" href="{{ path(route_name) }}">{{ label }}</a>
    </li>
{% endmacro %}

